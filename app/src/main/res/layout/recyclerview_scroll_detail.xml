<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="277dp"
        android:layout_height="254dp">

        <TextView
            android:id="@+id/recyclerView_scroll_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:text="@string/test_textview"
            android:textColor="#5c5c5c"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/recyclerView_scroll_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/recyclerView_scroll_title"
            android:layout_below="@+id/recyclerView_scroll_title"
            android:layout_marginTop="8dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:text="@string/test_textview"
            android:textColor="#9b9b9b"
            android:textSize="12dp" />

        <!--<com.facebook.drawee.view.SimpleDraweeView-->
        <!--android:id="@+id/recyclerView_scroll_pic"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignStart="@+id/recyclerView_scroll_detail"-->
        <!--android:layout_below="@+id/recyclerView_scroll_detail"-->
        <!--android:layout_marginBottom="21dp"-->
        <!--android:layout_marginTop="15dp"-->
        <!--fresco:placeholderImage="@drawable/recycler_banner_placeholder"-->
        <!--fresco:roundedCornerRadius="5dp" />-->
        <ImageView
            android:id="@+id/recyclerView_scroll_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/recyclerView_scroll_detail"
            android:layout_below="@+id/recyclerView_scroll_detail"
            android:layout_marginBottom="21dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/recycler_banner_placeholder" />
    </RelativeLayout>
</RelativeLayout>
